[Unit]
Description=ForeFlight Logbook Dashboard Service
After=network.target

[Service]
Type=simple
User=foreflight
Group=foreflight
WorkingDirectory=/opt/foreflight-logbook-dashboard
Environment="PATH=/opt/foreflight-logbook-dashboard/venv/bin"
ExecStart=/opt/foreflight-logbook-dashboard/venv/bin/python src/app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 