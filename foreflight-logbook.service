[Unit]
Description=ForeFlight Logbook Dashboard Service
After=network.target

[Service]
Type=simple
User=jkh
Group=jkh
WorkingDirectory=/home/jkh/foreflight-dashboard
Environment="PATH=/home/jkh/foreflight-dashboard/venv/bin"
ExecStart=/home/jkh/foreflight-dashboard/venv/bin/python src/app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 